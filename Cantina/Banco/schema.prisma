generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model typeUser {
  IdtypeUser     Int      @id @default(autoincrement())
  type           String
  user           user[]
}

model user {
  Id                 Int       @id @default(autoincrement())
  username           String    @unique
  password           String
  email              String
  ativo              Boolean
  typeUser_IdtypeUser Int
  typeUser           typeUser  @relation(fields: [typeUser_IdtypeUser], references: [IdtypeUser])
  pedidos            pedidos[]
}

model tipo_pagamento {
  Id              Int       @id @default(autoincrement())
  tipo_pagamento  String    @unique
  pedidos         pedidos[]
}

model pedidos {
  Id                      Int       @id @default(autoincrement())
  date                    DateTime
  retirada                DateTime
  valor                   String
  user_Id                 Int
  tipo_pagamento_Id       Int
  user                    user      @relation(fields: [user_Id], references: [Id])
  tipo_pagamento          tipo_pagamento @relation(fields: [tipo_pagamento_Id], references: [Id])
  produtos                produto_has_pedidos[]
}

model produto {
  Id              Int       @id @default(autoincrement())
  quantidade      Int
  nome            String    @unique
  valorCompra     Float
  valorVenda      Float
  descricao       String
  produtos_pedidos produto_has_pedidos[]
}

model produto_has_pedidos {
  produto_Id    Int
  pedidos_Id    Int

  produto       produto @relation(fields: [produto_Id], references: [Id])
  pedidos       pedidos @relation(fields: [pedidos_Id], references: [Id])

  @@id([produto_Id, pedidos_Id])
}
